{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}

    <div class="row">
        {% for image in images %}
            <div class="col-sm-6 col-md-3">
                <a href="{{ path('detail') }}" class="thumbnail">
                    <img src="/img/{{ image }}" alt="" class="img-fluid img-thumbnail"/>
                </a>
            </div>
        {% endfor %}
    </div>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>


{% endblock %}
